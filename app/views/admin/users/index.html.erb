          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>
                  <i class="fa fa-square fa-lg"><br><br>
                  Firstname
                </th>
                <th>
                  <i class="fa fa-square fa-lg"><br><br>
                  Lastname
                </th>
                <th>
                  <i class="fa fa-envelope-o fa-lg"><br><br>
                  Email
                </th>
                <th>
                  <i class="fa fa-check-square fa-lg"><br><br>
