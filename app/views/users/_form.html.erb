<div class="container">
  <div class="row">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        <i class="fa fa-times"></i></button>
        <h4 class="modal-title">Ready to Join? Create a New Account</h4>
      </div>
      <div class="modal-body">
        <%= form_for @user, html: {multipart: true,
          class: "form-horizontal style-form"} do |f| %>
          <%= render "shared/error_messages" %>
          <div class="form-group">
            <%= f.label :first_name, class: "col-md-2 control-label" %>
            <div class="col-md-12">
              <%= f.text_field :first_name, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :last_name, class: "col-md-2 control-label" %>
            <div class="col-md-12">
              <%= f.text_field :last_name, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :email, class: "col-md-2 control-label" %>
            <div class="col-md-12">
              <%= f.email_field :email, class: "form-control" %>
              <span class="help-block">Your email address is also used to log in.</span>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
              <div class="col-md-10">
                <label for="password">Password</label>
                <%= f.password_field :password, class: "form-control" %>
                <span class="help-block">Choose a password for your new account.</span>
              </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
              <div class="col-md-10">
                <label for="passwordr">Repeat Password</label>
                <%= f.password_field :password_confirmation, class: "form-control" %>
                <span class="help-block">Type the password again. Passwords must match.</span>
              </div>
              </div>
            </div>
          </div>
          <hr/>
          <p><%= t ".select_photo" %></p>
          <div class="form-group col-md-10">
            <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png" %>
          </div>
          <div class="form-group">
            <%= f.submit class: "btn btn-custom btn-lg btn-block" %>
          </div>
        <% end %>
        <p class="form-group">By creating an account, you agree to our <a href="#">Terms of Use</a> and our <a href="#">Privacy Policy</a>.</p>
        <hr>
        <p>Already have an account? <a href="#">Sign in</a></p>
        <br>
        <br>
      </div>
    </div>
  </div>
</div>