<% provide(:title,"User Index")%>
<h1>User List</h1>

<div id="page-wrapper" >
  <div id="page-inner">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
          <legend>Meet other community members. </legend>
          </div>
          <%#= will_paginate @users %>
          <br>
          <div class="panel-body">
            <% if @users.present? %>
              <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                  <tr>
                    <th><%= t ".avatar" %></th>
                    <th><%= t ".name" %></th>
                  </tr>
                </thead>
                <tbody>
                  <ul class="users">
                    <% @users.each do |user| %>
                      <%= render user %>
                    <% end %>
                  </ul>
                <tbody>
              </table>
            <% else %>
              <p>
                <%= t(".number_of_users") %>
                <%= params[:search] %>
              </p>
            <% end %>
          </div>
          <br>
          <div class="col-sm-5">
            <div class="dataTables_info" id="example2_info" role="status" aria-live="polite">
              <legend> Total Members : <%= User.count %></legend>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
